<script>
const noBtn = document.getElementById("no");
const yesBtn = document.getElementById("yes");

// No button katrheb
noBtn.addEventListener("mouseover", () => {
  noBtn.style.top = Math.random()*80 + "vh";
  noBtn.style.left = Math.random()*80 + "vw";
});

// Yes button katban qaloub w message
yesBtn.addEventListener("click", () => {
  document.body.innerHTML = `
  <div style="text-align:center; margin-top:50px;">
    <h1 style="color:#ff4d6d; font-size:2em;">Kaybghiiiik Adil bzzaf ‚ù§Ô∏è<br>
    Kaynmoot 3lik nti afdal wahda fhyati<br>
    Azin dyali, al3mr dyali, amrati<br>
    Saraha hamdulah nti fhyati<br>
    Inchallah dima nb9aw mjmou3in üíñ</h1>
  </div>
  `;

  // create hearts
  setInterval(() => {
    const heart = document.createElement('div');
    heart.classList.add('heart');
    heart.style.left = Math.random() * window.innerWidth + "px";
    heart.innerHTML = "‚ù§Ô∏è";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 2000);
  }, 200);
});
</script>

